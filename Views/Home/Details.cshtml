@model DetailsViewModel
@{
    ViewData["Title"] = "کالا " + Model.product.Name;
}

<div >
    <h1 class="display-5 text-center">@Model.product.Name</h1>
    <hr/>
    <img src="/images/@(Model.product.Id).jpg"
         alt="@Model.product.Name" 
         class="img-thumbnail"
         height="800" width="800"/>

    <p class="py-5 text-justify">@Model.product.Description</p>
    <p>قیمت : @Model.product.Item.Price</p>
    <dl>
        @foreach(var item in Model.categories)
        {
            <dt><a>@item.Name</a></dt>
            <dd>@item.Description</dd>
        }
    </dl>
    <div>
        <a class="btn btn-primary"
        asp-action="AddToCart"
        asp-controller="Home"
        asp-route-itemId="@Model.product.ItemId">افزودن به سبد خرید</a>
    </div>

</div>
